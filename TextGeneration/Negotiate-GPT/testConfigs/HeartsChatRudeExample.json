{
  "preamble":"FILE HeartsChatBuyerRude",
  "humanPartyName":"Seller",
  "aiPartyName":"Buyer",
  "temperature":0.6,
  "maxOutputLength":150,
  "pricingModel":{
    "type":"PriceBelow",
    "parameters":[
      {
        "name":"limitPrice",
        "value":200000
      },
      {
        "name":"nextOffer",
        "value":100000
      },
      {
        "name":"offerStep",
        "value":1000
      }
    ]
  },
  "controlSystem":{
    "conditions":[
      {
        "name":"offerSolicited",
        "type":"LanguageSpecifiedCondition",
        "languageSpecification":"Did the Seller ask the Buyer what they would pay or that the buyer increase their offer?",
        "checkOn":"AfterUserMessage",
        "needToInclude":"PreambleAndHistory"
      },
      {
        "name":"sellerMadeOffer",
        "type":"LanguageSpecifiedCondition",
        "languageSpecification":"Did the Seller say what they would sell it for for?",
        "checkOn":"AfterUserMessage",
        "needToInclude":"PreambleAndHistory"
      },
      {
        "name":"offerUnderLimit",
        "type":"ExtractedNumberIs",
        "extractor":{"type":"GetFirstNumber"},
        "checkOn":"AfterUserMessage",
        "comparison":"LessThan",
        "target":200000
      },
      {
        "name":"offerOverLimit",
        "type":"ExtractedNumberIs",
        "extractor":{"type":"GetFirstNumber"},
        "checkOn":"AfterUserMessage",
        "comparison":"GreaterThanOrEqualTo",
        "target":200000
      },
      {
        "name":"sellerMadeAcceptableOffer",
        "type":"And",
        "conditions":["sellerMadeOffer","offerUnderLimit"],
        "checkOn":"AfterUserMessage"
      },
      {
        "name":"sellerMadeUnacceptableOffer",
        "type":"And",
        "conditions":["sellerMadeOffer","offerOverLimit"],
        "checkOn":"AfterUserMessage"
      },
      {
        "name":"sellerMentionedSummer",
        "type":"LanguageSpecifiedCondition",
        "languageSpecification":"Did the Seller mention Hearts of Summer",
        "checkOn":"AfterUserMessage",
        "needToInclude":"PreambleAndHistory",
        "triggerOnce":true
      }
    ],
    "actions":[
      {
        "name":"makeOffer",
        "type":"MakeOffer"
      },
      {
        "name":"acceptOffer",
        "type":"AcceptOffer"
      },
      {
        "name":"BuyerNeedsBathroom",
        "type":"SubmitBotInstruction",
        "instruction":"The Buyer needs to use the bathroom and should say so in the next message."
      },
      {
        "name":"BuyerBeRude",
        "type":"SubmitBotInstruction",
        "instruction":"The Buyer should insult the Seller's knowledge of art."
      }
    ],
    "controlPairs":[
      {
        "condition":"offerSolicited",
        "action":"makeOffer"
      },
      {
        "condition":"sellerMadeAcceptableOffer",
        "action":"acceptOffer"
      },
      {
        "condition":"sellerMadeUnacceptableOffer",
        "action":"makeOffer"
      },
      {
        "condition":"sellerMentionedSummer",
        "action":"BuyerNeedsBathroom"
      },
      {
        "condition":"sellerMadeUnacceptableOffer",
        "action":"BuyerBeRude"
      }
    ]
  }
}